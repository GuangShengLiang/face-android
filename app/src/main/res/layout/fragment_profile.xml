<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:fresco="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="#ebebeb"
			  android:orientation="vertical">

	<RelativeLayout
			android:id="@+id/rl_myinfo"
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="18dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">

		<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/sdv_avatar"
				android:layout_width="64dp"
				android:layout_height="64dp"
				android:layout_marginLeft="15dp"
				fresco:placeholderImage="@mipmap/default_user_avatar"/>

		<LinearLayout
				android:id="@+id/ll_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="12dp"
				android:layout_toRightOf="@id/sdv_avatar"
				android:orientation="horizontal">

			<TextView
					android:id="@+id/tv_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textColor="#353535"
					android:textSize="16sp"/>

			<ImageView
					android:id="@+id/iv_sex"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginLeft="8dp"
					android:src="@mipmap/ic_sex_male"
					android:visibility="visible"/>
		</LinearLayout>

		<TextView
				android:id="@+id/tv_wxid"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_marginLeft="16dp"
				android:layout_marginBottom="10dp"
				android:layout_toRightOf="@id/sdv_avatar"
				android:text="ID:"
				android:textColor="#AAAAAA"
				android:textSize="14sp"/>

		<ImageView
				android:layout_width="18dp"
				android:layout_height="18dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="32dp"
				android:src="@mipmap/qr_code"

		/>
	</RelativeLayout>

	<RelativeLayout
			android:id="@+id/act_list"
			android:layout_width="match_parent"
			android:layout_height="96dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingLeft="12dp">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:background="#ebebeb"
				android:orientation="vertical">
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="我的活动"
				android:textAlignment="textStart"
		/>
		<View
				android:layout_width="wrap_content"
				android:layout_height="0.1dp"
				android:layout_alignParentBottom="true"
				android:layout_marginRight="12dp"
				android:background="#dadada"/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:background="#ebebeb"
				android:orientation="horizontal">
			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="待参加"
					android:textColor="#353535"
					android:textSize="16sp"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="申请中"
					android:textColor="#353535"
					android:textSize="16sp"/>
		</LinearLayout>
	</RelativeLayout>
	<RelativeLayout
			android:id="@+id/rl_album"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingLeft="12dp">

		<ImageView
				android:id="@+id/iv_album"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="12dp"
				android:src="@mipmap/album"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/iv_album"
				android:text="@string/album"
				android:textColor="#353535"
				android:textSize="16sp"/>

		<View
				android:layout_width="match_parent"
				android:layout_height="0.1dp"
				android:layout_alignParentBottom="true"
				android:layout_marginRight="12dp"
				android:background="#dadada"/>
	</RelativeLayout>

	<RelativeLayout
			android:id="@+id/rl_collect"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingLeft="12dp">

		<ImageView
				android:id="@+id/iv_collect"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="12dp"
				android:src="@mipmap/collect"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/iv_collect"
				android:text="@string/collect"
				android:textColor="#353535"
				android:textSize="16sp"/>
	</RelativeLayout>
	<RelativeLayout
			android:id="@+id/rl_my_join"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingLeft="12dp">

		<ImageView
				android:id="@+id/iv_wallet"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="12dp"
				android:src="@mipmap/wallet"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/iv_wallet"
				android:text="@string/my_join"
				android:textColor="#353535"
				android:textSize="16sp"/>

		<View
				android:layout_width="match_parent"
				android:layout_height="0.1dp"
				android:layout_alignParentBottom="true"
				android:layout_marginRight="12dp"
				android:background="#dadada"/>
	</RelativeLayout>

	<RelativeLayout
			android:id="@+id/rl_my_publish"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingLeft="12dp">

		<ImageView
				android:id="@+id/iv_card_holder"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="12dp"
				android:src="@mipmap/card_holder"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/iv_card_holder"
				android:text="@string/my_publish"
				android:textColor="#353535"
				android:textSize="16sp"/>
	</RelativeLayout>
	<RelativeLayout
			android:id="@+id/rl_my_apply"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingLeft="12dp">

		<ImageView
				android:id="@+id/iv_card_apply"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="12dp"
				android:src="@mipmap/card_holder"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/iv_card_apply"
				android:text="我的申请"
				android:textColor="#353535"
				android:textSize="16sp"/>
	</RelativeLayout>
	<RelativeLayout
			android:id="@+id/rl_my_invited"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingLeft="12dp">

		<ImageView
				android:id="@+id/iv_card_invited"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="12dp"
				android:src="@mipmap/card_holder"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/iv_card_invited"
				android:text="收到的邀请"
				android:textColor="#353535"
				android:textSize="16sp"/>
	</RelativeLayout>

	<RelativeLayout
			android:id="@+id/rl_setting"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/btn_list_item_bg"
			android:clickable="true"
			android:paddingLeft="12dp">

		<ImageView
				android:id="@+id/iv_setting"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="12dp"
				android:src="@mipmap/setting"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@id/iv_setting"
				android:text="@string/setting"
				android:textColor="#353535"
				android:textSize="16sp"/>
	</RelativeLayout>
</LinearLayout>