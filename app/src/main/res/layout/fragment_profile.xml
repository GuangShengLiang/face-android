<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/appBg"
	android:padding="15dp"
	android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageView
			android:id="@+id/set"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/my_more" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/head" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="120dp"
			android:layout_alignParentRight="true">

            <LinearLayout
				android:id="@+id/fans"
                android:layout_width="120dp"
                android:layout_height="match_parent"
				android:gravity="center"
                android:orientation="vertical">

                <TextView
					android:id="@+id/fanTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="粉丝"
                    android:textColor="@color/b2"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
				android:id="@+id/follow"
				android:layout_width="120dp"
				android:layout_height="match_parent"
				android:gravity="center"
                android:orientation="vertical">

                <TextView
					android:id="@+id/followTotal"
					android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/b2"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <TextView
		android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
		android:id="@+id/ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
		android:alpha="0.76"
        android:textSize="13sp" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:alpha="0.12"
		android:layout_marginTop="6dp"
		android:layout_marginBottom="6dp"
		android:background="@color/appLine"/>

	<TextView
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="又是一年好光景"
		android:textColor="@color/white"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:textSize="13sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="50dp"
			android:layout_height="22dp"
			android:layout_marginRight="15dp"
			android:gravity="center"
			android:background="@drawable/bg_tip_my">
			<ImageView
				android:id="@+id/genderImg"
				android:layout_width="16dp"
				android:layout_height="16dp"
				android:src="@mipmap/nv"/>
			<TextView
				android:id="@+id/year"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#fbfbfb"
				android:textSize="13sp" />
		</LinearLayout>

		<TextView
			android:id="@+id/loveStatusName"
			android:layout_width="50dp"
			android:layout_height="22dp"
			android:text="单身"
			android:textColor="#fbfbfb"
			android:gravity="center"
			android:background="@drawable/bg_tip_my"
			android:textSize="13sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="34dp"
		android:layout_marginTop="15dp"
		android:layout_marginBottom="15dp">
		<TextView
			android:id="@+id/infoBtn"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"
			android:text="编辑资料"
			android:textColor="@color/white"
			android:layout_marginRight="15dp"
			android:gravity="center"
			android:background="@drawable/bg_tip_my"
			android:textSize="13sp" />
		<TextView
			android:id="@+id/friendBtn"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"
			android:text="+朋友"
			android:textColor="@color/white"
			android:gravity="center"
			android:background="@drawable/bg_tip_my"
			android:textSize="13sp" />
	</LinearLayout>

	<com.google.android.material.tabs.TabLayout
		android:id="@+id/home_indicator"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		app:tabIndicatorColor="@color/white"
		app:tabIndicatorFullWidth="false"
		app:tabBackground="@null"
		app:tabRippleColor="@null"
		app:tabGravity="center"
		app:tabMode="fixed"
		app:tabSelectedTextColor="@color/white"
		app:tabTextColor="@color/white" />

	<androidx.viewpager.widget.ViewPager
		android:id="@+id/home_pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />


</LinearLayout>