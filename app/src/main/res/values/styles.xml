<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryDark">@color/cornflower_blue_dark</item>
        <item name="colorAccent">@color/cornflower_blue</item>
    </style>

    <style name="BlueThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryDark">@color/cornflower_blue_dark</item>
        <item name="colorAccent">@color/cornflower_blue</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="SettingItemStyle">
        <item name="android:background">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46.67dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="info_left_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textColor">#FF2C2C2C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
